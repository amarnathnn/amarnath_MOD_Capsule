    <PackageReference Include="NBench" Version="2.0.1" />
    <PackageReference Include="NBench.Runner" Version="1.2.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="xunit" Version="2.4.0" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MOD.TechnologyService\MOD.TechnologyService.csproj" />
    <ProjectReference Include="..\MOD.UserService\MOD.UserService.csproj" />
  </ItemGroup>

